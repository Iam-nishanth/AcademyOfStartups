{
    "version": 2,
    "builds": [
        {
            "src": "client/**",
            "use": "@vercel/next"
        },
        {
            "src": "server/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "client/pages/$1.tsx"
        }
    ]
}